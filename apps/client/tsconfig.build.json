{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out-tsc",
    ".next",
    "tests/**/*",
    "specs/**/*",
    "**/*.test.*",
    "**/*.spec.*",
    "jest.config.ts",
    "eslint.config.*"
  ],
  "references": [
    {
      "path": "../../libs/shared-types/tsconfig.lib.json"
    }
  ]
}
